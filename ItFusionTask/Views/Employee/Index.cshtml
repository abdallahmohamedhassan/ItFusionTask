@model List<Employee>

@{
    ViewData["Title"] = "Employees";
}

<h2>Employees</h2>

<a asp-action="Create" class="btn btn-primary">Add Employee</a>
<a asp-action="Upload" class="btn btn-secondary">Upload Excel</a>


@if (ViewBag.Error != null)
{
    <div class="alert alert-danger">@ViewBag.Error</div>
}

<table class="table table-bordered mt-3">
    <thead>
        <tr>
            <th>Name</th>
            <th>Join Date</th>
            <th>Phone</th>
            <th>Gender</th>
            <th>Salary</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var emp in Model)
        {
            <tr>
                <td>@emp.Name</td>
                <td>@emp.JoinDate.ToShortDateString()</td>
                <td>@emp.Phone</td>
                <td>@emp.Gender</td>
                <td>@emp.Salary</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@emp.Id" class="btn btn-sm btn-warning">Edit</a>
                    <a asp-action="Delete" asp-route-id="@emp.Id" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure?');">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
